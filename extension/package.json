{
  "name": "qcri-scribe-ai",
  "displayName": "Scribe",
  "description": "Auto Code Documentation Generation using GPT4",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qcri-scribe-ai-sidebar-view",
          "title": "Scribe",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "qcri-scribe-ai-sidebar-view": [
        {
          "type": "webview",
          "id": "scribe-view",
          "name": "Scribe",
          "icon": "$(notebook)",
          "contextualTitle": "Scribe"
        }
      ]
    },
    "commands": [
      {
        "command": "qcri-scribe-ai.helloWorld",
        "title": "Launch Scribe AI"
      }
    ],
    "keybindings": [
      {
        "command": "qcri-scribe-ai.generateDoc",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "start:ext": "npm run build:webview && open -a Visual\\ Studio\\ Code\\ 2 && cliclick kd:fn kp:f5",
    "test:webview": "cd webview-ui && npm run test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
